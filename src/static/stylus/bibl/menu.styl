header
  position absolute
  top 40px
  width 100%
  display flex
  align-items center
  justify-content space-between

  & .menu
    display flex

    & li
      margin-right 24px
      display flex
      align-items center

      & a
        padding 12px 32px
        border-radius 4px
        font-weight bold

        &.singUp
          background #66B700

      &:nth-child(2)
        margin-right 66px

      &:last-child
        margin-right 0

  & .logoV
    display none


.mobButton
  width 48px
  height 48px
  box-shadow 0px 0px 12px rgba(0, 0, 0, 0.06)
  border-radius 4px
  padding 13px 8px
  position relative
  z-index 9999

  & .burger
    display block
    border-radius 10px
    background #fff
    width 34px
    height 2px
    position absolute
    top 50%
    transform translateY(-50%) rotate(0)
    transition .5s cubic-bezier(0.445, 0.05, 0.55, 0.95)

    &::before
      content ''
      display block
      width 100%
      height 2px
      border-radius 10px
      background #fff
      position absolute
      top -10px
      transition .5s cubic-bezier(0.445, 0.05, 0.55, 0.95)

    &::after
      content ''
      display block
      width 100%
      height 2px
      border-radius 10px
      background #fff
      position absolute
      top 10px
      right 0
      transition .5s cubic-bezier(0.445, 0.05, 0.55, 0.95)

.open .burger{
    transform translateY(-50%) rotate(45deg)
    transition .5s cubic-bezier(0.445, 0.05, 0.55, 0.95)
}
.open .burger::before{
    top 0
    transform rotate(-90deg)
    transition .5s cubic-bezier(0.445, 0.05, 0.55, 0.95)
}
.open .burger::after{
    opacity 0
    transition .5s cubic-bezier(0.445, 0.05, 0.55, 0.95)
}
.mobMenu{
    display none
    position fixed
    background #645E9D
    box-shadow -7px 30px 34px rgba(0, 0, 0, 0.05)
    height 100%
    width 50%
    min-width 250px
    top 0
    right -100%
    z-index 999
    padding 140px 29px 0 10%
    transition .5s cubic-bezier(0.445, 0.05, 0.55, 0.95)
}
.mobMenu.open{
    right 0
    transition .5s cubic-bezier(0.445, 0.05, 0.55, 0.95)
}
.mobMenu_svg{
    position absolute
    bottom 0
    right 0
}
.mobItems{
    margin-bottom 30px
    position relative
}
.mobItems::after{
    content ''
    display block
    position absolute
    bottom -4px
    background linear-gradient(90deg, #fff 0%, #fff0 100%)
    border-radius 13px
    width 50%
    height 2px
}
.mobMenu a{
    color #fff
}
