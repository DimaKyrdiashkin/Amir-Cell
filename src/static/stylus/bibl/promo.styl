.promo
  width 100%
  transition 1s
  background transparent
  position relative
  color #fff
  display flex
  flex-direction column
  justify-content center

  &_main
    display flex
    flex-direction column
    position relative
    margin-top 100px
    margin-left calc(50vw - 500px)
    max-width 465px

    &>p
      margin 12px 0 60px
      color #5C5C5C

    &__button
      display flex
      align-items center
      position relative
      width fit-content

      &>a
        text-align center
        letter-spacing .5px
        color #fff
        font-weight bold
        padding 20px 60px
        border-radius 4px
        transition .4s
        background linear-gradient(91.7deg, #66B700 0%, #A2D906 100%)
  
  &_slider
    position relative
    width 100%
    height 80vh
    max-height 500px
    border-top 1px solid #F1F1F1
    box-shadow 0px 15px 40px rgba(0, 0, 0, 0.04)
    overflow hidden

    & .people
      position absolute
      right 15%
      bottom 0
      height 85%

    & .abstraction
      position absolute
      z-index -1
      right 0
      bottom 0
      height 90%

  &_bottom
    max-width 1200px
    margin 60px auto 0

    &__box
      display flex
      justify-content space-between

      &-items
        color #5C5C5C
        width calc(25% - 75px)

        &--title
          font-weight bold
          margin-top 40px
          margin-bottom 25px

        &--img
          display flex
          justify-content center
          align-items center
          position relative
          transform translateX(-11px)
          width 58px
          height 58px
          border-radius 50%
          transition 1s
          // background #66B700

          & svg>path
            transition 1s
            // fill #fff
          

