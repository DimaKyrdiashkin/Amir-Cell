.promo
  min-height 100vh
  width 100%
  transition 1s
  background transparent
  position relative
  color #fff

  &_main
    display flex
    flex-direction column
    position relative
    margin-top 200px
    max-width 465px

    &>p
      margin 12px 0 60px
      color #5C5C5C

    &__button
      display flex
      align-items center
      position relative
      width fit-content

      &>a
        text-align center
        letter-spacing 1px
        color #fff
        font-weight bold
        padding 20px 60px
        border-radius 4px
        transition .4s
        background linear-gradient(91.7deg, #66B700 0%, #A2D906 100%)
  
  &_slider
    position absolute
    width 100%
    height 80vh
    max-height 500px
    top 108px
    border-top 1px solid #F1F1F1

    & .people
      position absolute
      right 15%
      bottom 0

    & .abstraction
      position absolute
      z-index -1
      right 0
      bottom 0