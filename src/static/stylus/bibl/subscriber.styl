.subscriber
  background #FCFCFC
  padding 100px 0

  &_box
    display flex
    justify-content space-between
    margin 100px 0

    &__items
      &-imgWrapp
        border-radius 50%
        padding 70px
        width fit-content
        margin 0 auto
        position relative
        background #fff
        box-shadow 0px 15px 40px rgba(0, 0, 0, 0.04)
      
      &-num
        position absolute
        left 12px
        top 12px
      
      &-text
        margin-top 56px
        max-width 240px
        text-align center
  &_qr
    display flex
    width fit-content
    align-items center
    padding 24px
    margin 0 auto
    border-radius 4px
    border 1px solid #F1F1F1

    &>img
      margin-right 40px

    &>p
      color #9A9A9A

  &_contact
    margin-top 80px

    &>h5
      text-align center

    &__backCall
      margin-top 60px
      width 100%
      height 100px
      background linear-gradient(92.64deg, #66B700 0%, #A2D906 100%)
      box-shadow 0px 15px 40px rgba(0, 0, 0, 0.04)
      border-radius 4px

    &__list
      margin-top 28px
      padding 28px
      background #FFFFFF
      box-shadow 0px 15px 40px rgba(0, 0, 0, 0.04)
      border-radius 4px

      & p
        display flex
        align-items center

        &>.greenMark
          margin-right 16px

        &:first-child
          margin-bottom 24px
