.steps
  padding-top 132px
  background #fff

  &_table
    min-width 1200px
    margin-top 60px
    background #FCFCFC
    border-radius 4px
    display grid
    grid-template-columns repeat(8, 1.2fr)
    grid-template-rows repeat(4, 1fr)
    padding 44px 0 46px 28px
    grid-row-gap 25px
    position relative

    &_bg
      padding 12px 0
      background rgba(241, 241, 241, 0.6)

      &.tabl_left
        padding-left: 16px
        border-top-left-radius 30px
        border-bottom-left-radius 30px
      &.tabl_right
        padding-right: 16px
        border-top-right-radius 30px
        border-bottom-right-radius 30px
      &.table_color
        color #645E9D
    &:after
      content ""
      position: absolute
      width 100%
      height 100%
      grid-column: -4/-1;
      grid-row: 1/-1;
      border-radius 24px
      transform: translate(-32px,-55px)
      padding-bottom: 60px
      border 16px solid #645E9D
