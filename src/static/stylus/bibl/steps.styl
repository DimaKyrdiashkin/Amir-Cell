.steps
  padding-top 132px
  background #fff

  &_table
    margin-top 60px

  &_total
    margin-top 60px
    border-radius 4px
    padding 40px
    border 1px solid #F1F1F1
    box-shadow 0px 15px 40px rgba(0, 0, 0, 0.04)
    display flex

    &__left
      width 55%
      margin-right 5%

      &-title
        font-weight bold
        margin-bottom 24px
        max-width 450px

      

    &__right
      width 40%
      display flex
      align-items center
      justify-content center

      &-img
        width 56px
        height 56px
        display flex
        justify-content center
        align-items center
        margin-right 32px

        &>img
          border-radius 50%
          border 10px solid rgba(100, 94, 157, 0.2)
    
    &__box
      display flex
      align-items center
      color #645E9D
      background rgba(158, 122, 193, 0.12)
      border-radius 4px
      padding 18px 24px

      &>h5
        color #645E9D
        margin-right 16px
