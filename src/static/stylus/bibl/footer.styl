footer{
    display flex
    justify-content center
    background #FCFCFC
    padding 50px 0
    width 100vw
}
footer > .conteiner{
    display flex
    align-items center
    justify-content space-between
}
.foot-menu{
    display flex
}
.foot-menu>li{
    margin-right 60px
}
.foot-menu>li:last-child{
    margin-right 0
}
.foot-menu a{
    z-index 2
    position relative
    transition: all .3s cubic-bezier(0.445, 0.05, 0.55, 0.95);
}
.foot-menu a::before{
    content ''
    display block
    position absolute
    width calc(100% + 12px)
    height 0
    background #66B700
    top 50%
    left 50%
    transform translate(-50%, -50%)
    z-index -1
    transition: all .3s cubic-bezier(0.445, 0.05, 0.55, 0.95);
}
.foot-menu a:hover{
    color #fff
    transition: all .3s cubic-bezier(0.445, 0.05, 0.55, 0.95);
}
.foot-menu a:hover::before{
    height calc(100% + 12px)
    transition: all .3s cubic-bezier(0.445, 0.05, 0.55, 0.95);
}
@media all and (max-width 1280px) {
    footer{
        padding 35px 0
    }
    .foot-menu>li{
        margin-right 40px
    }
}
@media all and (max-width 920px) {
    .foot-menu>li{
        margin-right 20px
    }
}
@media all and (max-width 768px) {
    .foot-menu{
        display none
    }
}