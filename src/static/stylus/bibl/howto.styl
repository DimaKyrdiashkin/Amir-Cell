.howto .conteiner_head{
    margin-top 9.111111em
}
.howto_row{
    margin 84px auto 132px
    display flex
    justify-content space-between
    max-width 1000px
}
.howto_row>img{
    width 40%
}
.howto_row__right{
    display flex
    flex-direction column
    align-items center
    justify-content center
    width 50%
}
.howto a{
    background #66B700
    border-radius 4px
    padding 14px 25px
    color #fff
    display flex
    width fit-content
    margin-top 24px
}
.howto_text{
    position relative
}
.howto_text>p{
    text-align center
    background #fff
    box-shadow 0px 15px 40px rgba(0, 0, 0, 0.1)
    border-radius 18px
    width fit-content
    padding 16px 70px
    border 1px solid #F5F5F5
}
.circle{
    width 142px
    height 142px
    position absolute
    right -40px
    bottom 12px
}
.circle::before{
    content ''
    display block
    position absolute
    width 142px
    height 142px
    border 2px dashed #C2E299
    border-radius 50%
    z-index -1
    animation rotate 30s linear infinite
}
#howto_circle{
    animation rotate 15s linear infinite
    transform-origin center
}
@keyframes rotate{
    from{
        transform rotate(0deg)
    }
    to{
        transform rotate(360deg)
    }
}
@media all and (max-width 1280px) {
    .howto_text>p{
        padding 15px 25px
    }
    .circle{
        display none
    }
}
@media all and (max-width 580px) {
    .howto_row{
        flex-direction column
        justify-content center
        align-items center
    }
    .howto_row>img{
        width 70%
    }
    .howto_row__right{
        width 100%
        margin-top 45px
    }
}
@media all and (max-width 850px) and (orientation landscape) {
    .howto_row{
        margin 40px auto 70px !important
    }
    .howto_row>img{
        height -webkit-fill-available
    }
}