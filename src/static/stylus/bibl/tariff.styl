.tariffs
  background #fff
  padding-top 132px

  &_box
    display flex
    margin-top 80px
    position relative

    & .card
      height 535px
      display flex
      flex-direction column
      border-radius 18px
      overflow hidden
      position relative
      border 1px solid #F5F5F5
      transition 1s
      margin 0 10px

      &_small
        font-size 12px
        width 100%
        color #1b8508
        display flex
        justify-content center
        align-items center
        border-radius 3px
        box-shadow 0 0 12px rgba(0,0,0,.03)
        border 1px dashed #f5f5f5

      &:focus
        outline none

      &::before
        content ''
        display block
        width 100%
        position absolute
        bottom 0
        height 100px
        background linear-gradient(180deg, rgba(255, 255, 255, 0) 0%, #FFFFFF 46.35%)
        z-index 99

      &_head
        display flex
        justify-content space-between
        align-items center
        position relative
        border 1px solid #F3F3F3
        overflow hidden
        min-height 120px
        margin-bottom 24px

        &>h4
          color #5C5C5C
          margin-left 24px

          &::after
            content ''
            display block
            background #A3D466
            width 32px
            height 2px
            border-radius 2px

        & img
          position absolute
          right 0
          top 0
          z-index -1

      &_content
        padding 0 24px
        display flex
        justify-content space-between
        min-height 175px
        flex-wrap wrap

        & .card_column
          text-align center
          display flex
          flex-direction column
          width 30%

          &__top
            color #5C5C5C
            margin-bottom 12px
            background #FCFCFC
            border 1px solid #F5F5F5
            border-radius 5px
            padding 6px 0
            text-transform uppercase
            font-weight bold
            align-self center
            width 100%
          
          &__bottom
            background #fff
            border 1px dashed #F5F5F5
            box-shadow 0px 0px 12px rgba(0, 0, 0, 0.03)
            border-radius 3px
            padding 24px 0
            white-space nowrap
            color #1B8508
            align-self center
            width 100%
            transition .5s

      &_bottom
        padding 0 24px
        margin-bottom 70px
        display flex
        flex-direction column
        position relative
        background #fff
        transition 1s
  &_link
    background linear-gradient(91.7deg, #66B700 0%, #A2D906 100%)
    padding 18px 52px
    border-radius 4px
    display flex
    margin 0 auto
    width fit-content
    font-weight bold
    letter-spacing .5px

#card_bottom.open
  transform translateY(-190px)
  transition 1s

.cardT
  transition .3s linear
  
.price
  display flex
  flex-direction column
  margin-bottom 18px
  margin-top 5px

  &>h5
    color #1B8508
    margin-bottom 4px

  &>p
    color #9A9A9A

.card_button
  margin-top 23px
  cursor pointer
  position absolute
  bottom 20px
  left 50%
  transform translateX(-50%)
  transition .4s
  background #fff
  border-radius 50%
  z-index 999

  &.open
    transform translateX(-50%) rotate(180deg)
    transition .4s

@media all and (max-width 1440px)
  .tariffs
    & .container
      max-width 90%

@media all and (max-width 768px)
  .tariffs
    padding-top 92px
    
    &_box
      max-width 400px
      margin 80px auto 0

@media all and (max-width 560px)
  .tariffs
    padding-top 60px

    &_box
      margin 36px auto 0

      & .card
        &_content
        &_bottom
          padding 0 12px

.cardT
  font-size 12px

@media all and (max-width 375px)
  .tariffs
    &_link
      padding 18px 26px

@media all and (orientation landscape) and (max-width 860px)
  .tariffs
    padding-top 92px

    &_box
      margin-top 60px

    & .container
      max-width 95%